<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Emergency Alerts</title>
    <link rel="stylesheet" href="/public/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        /* Additional Styles for Emergency Alerts page */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .card {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        h2 {
            color: #333;
            font-size: 24px;
        }
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .table th, .table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
        .table th {
            background-color: #f2f2f2;
            color: #333;
        }
        .btn {
            padding: 10px 15px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold;
        }
        .btn:hover {
            background-color: #218838;
        }
        .action-buttons {
            display: flex;
            gap: 10px;
        }
        .action-buttons a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }
        .action-buttons a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <h2>Manage Emergency Alerts</h2>
            <a href="/emergencyAlerts/create" class="btn">Add New Alert</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Message</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (emergencyAlerts && emergencyAlerts.length > 0) { %>
                        <% emergencyAlerts.forEach(alert => { %>
                            <tr>
                                <td><%= alert.id %></td>
                                <td><%= alert.message %></td>
                                <td><%= alert.created_at %></td>
                                <td class="action-buttons">
                                    <a href="/emergencyAlerts/edit/<%= alert.id %>">Edit</a>
                                    <a href="/emergencyAlerts/delete/<%= alert.id %>">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" style="text-align:center;">No Emergency Alerts Found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
